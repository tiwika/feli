{
	"version": 1.1,
	"menu": {
		"global": {
			"label": "Globale Einstellungen",
			"settings": {
				"header.company_name": {
					"type": "inputText",
					"required": false,
					"label": "Name of your store",
					"options": {
						"tooltip": "Name of your store",
						"defaultValue": "Ceres Webshop"
					}
				},
				"header.company_logo": {
					"type": "inputFile",
					"required": false,
					"label": "URL to your company logo",
					"options": {
						"tooltip": "URL to your company logo",
						"defaultValue": "images/ceres-logo.svg"
					}
				},
				"global.shippingCostsCategoryId": {
					"type": "categoryPicker",
					"required": false,
					"label": "Category to display shipping information",
					"options": {
						"tooltip": "Category to display shipping information",
						"defaultValue": ""
					}
				},
				"global.default_contact_class_b2b": {
					"type": "inputText",
					"required": false,
					"label": "Default customer class B2B",
					"options": {
						"tooltip": "Default customer class B2B",
						"defaultValue": ""
					}
				},
				"global.enableOldUrlPattern": {
					"type": "inputText",
					"required": false,
					"label": "Enable Callisto route pattern for items",
					"options": {
						"tooltip": "Enable Callisto route pattern for items",
						"defaultValue": false
					}
				},
				"global.shop_mail": {
					"type": "inputText",
					"required": false,
					"label": "Contact form email address",
					"options": {
						"tooltip": "Contact form email address",
						"defaultValue": "your@email.com"
					}
				},
				"global.opening_times": {
					"type": "inputText",
					"required": false,
					"label": "Opening hours (DE)",
					"options": {
						"tooltip": "Opening hours (DE)",
						"defaultValue": "Montag - Freitag, 00:00 - 24:00"
					}
				},
				"global.en.opening_times": {
					"type": "inputText",
					"required": false,
					"label": "Opening hours (EN)",
					"options": {
						"tooltip": "Opening hours (EN)",
						"defaultValue": "Montag - Freitag, 00:00 - 24:00"
					}
				},
				"global.show_data": {
					"type": "multiCheckBox",
					"required": false,
					"label": "Show contact data",
					"options": {
						"tooltip": "Show contact data",
						"defaultValue": "street, zip, city, hotline, email, opening_times",
						"checkBoxValues": [
							{
								"value": "name",
								"caption": "Company"
							},
							{
								"value": "ceo",
								"caption": "CEO"
							},
							{
								"value": "city",
								"caption": "City"
							},
							{
								"value": "email",
								"caption": "Email"
							},
							{
								"value": "fax",
								"caption": "fax"
							},
							{
								"value": "fon",
								"caption": "Phone"
							},
							{
								"value": "hotline",
								"caption": "Hotline"
							},
							{
								"value": "street",
								"caption": "Street"
							},
							{
								"value": "vatNumber",
								"caption": "VAT Number"
							},
							{
								"value": "timezone",
								"caption": "Time zone"
							},
							{
								"value": "opening_times",
								"caption": "Opening hours"
							}
						]
					}
				},
				"global.google_recaptcha_api_key": {
					"type": "inputText",
					"required": false,
					"label": "Google reCAPTCHA website key",
					"options": {
						"tooltip": "Google reCAPTCHA website key",
						"defaultValue": ""
					}
				},
				"contact.api_key": {
					"type": "inputText",
					"required": false,
					"label": "Google Maps API key",
					"options": {
						"tooltip": "Google Maps API key",
						"defaultValue": "API key"
					}
				},
				"contact.map_zoom": {
					"type": "inputText",
					"required": false,
					"label": "Zoom level",
					"options": {
						"tooltip": "Zoom level",
						"defaultValue": "16"
					}
				},
				"contact.map_show_in_mobile": {
					"type": "checkBox",
					"required": false,
					"label": "Show map in mobile view",
					"options": {
						"tooltip": "Show map in mobile view",
						"defaultValue": false
					}
				}
			}
		},
		"homepage": {
			"label": "Homepage",
			"settings": {
				"default.homepage": {
					"type": "checkBox",
					"required": false,
					"label": "Show default homepage",
					"options": {
						"tooltip": "Show default homepage",
						"defaultValue": true
					}
				},
				"default.sliderItemId1": {
					"type": "inputText",
					"required": false,
					"label": "ID of the item variation to display in the first slide of the image slider",
					"options": {
						"tooltip": "ID of the item variation to display in the first slide of the image slider",
						"defaultValue": ""
					}
				},
				"default.sliderImageUrl1": {
					"type": "inputFile",
					"required": false,
					"label": "URL to the image of the first slide",
					"options": {
						"tooltip": "URL to the image of the first slide",
						"defaultValue": ""
					}
				},
				"default.sliderItemId2": {
					"type": "inputText",
					"required": false,
					"label": "ID of the item variation to display in the second slide of the image slider",
					"options": {
						"tooltip": "ID of the item variation to display in the second slide of the image slider",
						"defaultValue": ""
					}
				},
				"default.sliderImageUrl2": {
					"type": "inputFile",
					"required": false,
					"label": "URL to the image of the second slide",
					"options": {
						"tooltip": "URL to the image of the second slide",
						"defaultValue": ""
					}
				},
				"default.sliderItemId3": {
					"type": "inputText",
					"required": false,
					"label": "ID of the item variation to display in the third slide of the image slider",
					"options": {
						"tooltip": "ID of the item variation to display in the third slide of the image slider",
						"defaultValue": ""
					}
				},
				"default.sliderImageUrl3": {
					"type": "inputFile",
					"required": false,
					"label": "URL to the image of the third slide",
					"options": {
						"tooltip": "URL to the image of the third slide",
						"defaultValue": ""
					}
				}
			}
		}
	}
}
